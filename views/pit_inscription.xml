<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_pit_inscription_tree" model="ir.ui.view">
            <field name="name"pit.inscription.tree</field>
            <field name="model"pit.inscription</field>
            <field name="arch" type="xml">
                <tree string="inscripcion">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="location_id"/>

                </tree>
            </field>
        </record>

        <record id="view_pit_inscription" model="ir.ui.view">
            <field name="name">Group</field>
            <field name="model"pit.inscription</field>
            <field name="arch" type="xml">
                <form string="Group">
                    <header>
                    </header>

                    <group col="4">
     
                        <field name="code"/>
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="teacher_id"/>
                        <field name="location_id"/>
                        <field name="active"/>


                    </group>
                    
                    <group string="product">

                        <field name="product_ids" >
                            <tree editable="bottom" >
                                <field name="quant"/>
                                <field name="product_id"/>
                                <field name="product_type"/>

                            </tree>
                        </field>

                    </group>


                    <group string="Calendar">
                        <field name="calendar_ids" >
                            <tree editable="bottom" >
                                <field name="location_id" invisible="True"/>
                                <field name="course_id" invisible="True"/>
                                <field name="name" />
                                <field name="dayofweek"/>
                                <field name="hour_from" widget="float_time"/>
                                <field name="hour_to" widget="float_time"/>
                                <field name="teacher_id"/>
                                <field name="classroom_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>

                            </tree>
                        </field>

                    </group>

                </form>
            </field>
        </record>

        <record id="pit_inscription_view_search" model="ir.ui.view">
            <field name="name"pit.inscription.search</field>
            <field name="model"pit.inscription</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Course">
                    <field name="name"/>

                </search>
            </field>
        </record>

        <record id="pit_inscription_action" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model"pit.inscription</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_pit_inscription_tree" />
        </record>

        <menuitem id="menu_pit_inscription" action="pit_inscription_action" name="Grups" parent="menu_pit_config_root" sequence="30"/>




    </data>
</openerp>
